@model User
@{
    ViewData["Title"] = "Login";
}


<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="px-5 ms-xl-4">
                    <span class="h1 fw-bold mb-1" style="color:coral">Project MVC</span>
                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-3 pt-5 pt-xl-0 mt-xl-n5" style="color:coral">

                    <form method="POST" asp-controller="User" asp-action="Create" style="width: fit-content;">

                        <h3 class="text-uppercase mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

                        <div class="form-outline mb-4">
                            <label asp-for="Secid" class="form-label" for="form2Example18">Student ID</label>
                            <input type="number"asp-for="Secid" id="form2Example18" class="form-control form-control-lg" />
                            
                        </div>

                        <div class="form-outline mb-4">
                            <label asp-for="Pass" class="form-label" for="form2Example28">Password</label>
                            <input type="text" asp-for="Pass" id="form2Example28" class="form-control form-control-lg" />
                            
                        </div>

                        <div class="pt-1 mb-4">
                            <button class="btn btn-info btn-lg btn-block" style="background-color:darkorange" type="submit">Login</button>
                        </div>

                        <p>ยังไม่มี account? สมัครสิ <a asp-controller="User" asp-action="Regis" class="link-info">Register here</a> </p>


                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://i.pinimg.com/originals/eb/e6/07/ebe60767e7a111f23ee789ce338fcb7c.jpg"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>